@model K.Models.WidgetConfig

@{
    ViewData["Title"] = "Eliminar Widget";
}

<h1>Eliminar Widget</h1>

<h4>¿Estás seguro de eliminar el siguiente widget?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>

    <dt class="col-sm-2">API</dt>
    <dd class="col-sm-10">@Model.UrlApi</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
